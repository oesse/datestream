{
  "extends": "airbnb-base",
  "plugins": ["babel"],
  "env": {
    "node": true
  },
  "rules": {
    "semi": ["error", "never"],
    "semi-style": ["error", "first"],
    "import/prefer-default-export": "off",
    "no-underscore-dangle": "off"
  },
  "overrides": [
    {
      "files": ["test/**/*.spec.js"],
      "env": {
        "mocha": true
      }
    }
  ]
}
